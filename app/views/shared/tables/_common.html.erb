<%
  params = {format: :json}.merge(local_assigns.fetch(:params, {}))
%>
<table
        id="<%= id %>"
        class="<%= class_name %> display compact table-nowrap table-common"
        style="width:100%"
        data-source="<%= path.call(params) %>"
        data-options="<%= JSON.generate(local_assigns.fetch(:options, {})) %>"
        >
        <thead>
          <%= yield %>
        </thead>
        <tbody>
        </tbody>
</table>
